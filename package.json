    "react-hot-loader": "^3.0.0-beta.6",
    "react-test-renderer": "^15.4.2",
    "script-ext-html-webpack-plugin": "^1.5.0",
    "serve": "^3.1.0",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.2.0",
    "webpack-md5-hash": "0.0.5"
