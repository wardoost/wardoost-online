{
  "name": "spa-react",
  "version": "0.1.0",
  "description": "Single page app with React",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --hot --inline --history-api-fallback --progress --open",
    "prestart": "npm run build",
    "start": "serve build --single --cache 1",
    "build": "cross-env NODE_ENV=production webpack --progress",
